{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:8083",
    "distDir": "../dist"
  },
  "package": {
    "productName": "app_main",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "overlay",
        "fullscreen": true,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "decorations": true,
        "url": "http://localhost:8083/overlay",
        "closable": false,
        "hiddenTitle": true
      },
      {
        "label": "settings",
        "fullscreen": false,
        "resizable": true,
        "title": "Settings",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "transparent": false,
        "decorations": true,
        "url": "http://localhost:8083/settings"
      }
    ]
  }
}
